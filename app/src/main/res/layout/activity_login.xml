<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一个简单的微博，希望你喜欢"
        android:textSize="@dimen/text_18"
        android:textColor="@color/webo_blue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_32"
        android:id="@+id/textView2"/>



    <com.tin.chigua.mywebo.view.CircleImageView
        android:id="@+id/start_oauth"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:clickable="true"
        android:src="@drawable/rocket"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp">

    </com.tin.chigua.mywebo.view.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:text="开启微博新世界"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/start_oauth"
        android:textSize="@dimen/text_16"
        android:layout_marginTop="@dimen/size_16"
        android:textColor="@color/webo_blue"
        />
    <TextView
        android:id="@+id/auth_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="auth_token"
        android:visibility="gone"/>

</RelativeLayout>